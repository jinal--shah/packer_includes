# vim: ts=4 st=4 sr noet smartindent syntax=make ft=make:
#
# ### MANDATORY_VARS
# put custom overrides or additions in current project in mandatory_vars.in
CUSTOM_FILE=mandatory_vars.in
include packer_includes/mandatory_vars/product.in
include packer_includes/custom_file.in

# ### CONSTANTS (not user-defineable)
# put custom overrides or additions in current project in constants.in
CUSTOM_FILE=constants.in
include packer_includes/constants/product.in
include packer_includes/custom_file.in

# ### USER_VARS (user-defineable)
# put custom overrides or additions in current project in user_vars.in
CUSTOM_FILE=user_vars.in
include packer_includes/user_vars/product.in
include packer_includes/custom_file.in

# ### ROLE_VARS (optional based on specific role e.g. amq | gateway etc ...)
# put custom overrides or additions in current project in user_vars.in
CUSTOM_FILE=role_vars.in
PROJECT_FILE := $(strip $(wildcard role_vars/$(EUROSTAR_SERVICE_ROLE).in))
ifneq ($(PROJECT_FILE),)
	include $(PROJECT_FILE)
endif
include packer_includes/custom_file.in

# ### GENERATED VARS: determined by make based on other values.
# put custom overrides or additions in current project in generated_vars.in
CUSTOM_FILE=generated_vars.in
include packer_includes/generated_vars/product.in
include packer_includes/custom_file.in

# ### RECIPES ...
CUSTOM_FILE=recipes.in
include packer_includes/recipes/product.in
include packer_includes/custom_file.in
